<head>
    <meta charset="UTF-8">
    <title>Web Authentication System</title>
    <link href= "/public/assets/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="login">
        <section id="header">
            <h1>Login Page</h1>
        </section>
        <div class="main">
            <form>
                <label for="Username">Username</label><br>
                <input type="text" id="Username" placeholder="Type your Username"><br><br>
                <label for="Password">Password</label><br>
                <input type="password" id="Password" placeholder="Type your Password"><br><br>
            </form>
        </div>
        <section id="button">
            <button type="button"><p>Login</p></button>
        </section>
    </div>
</body>